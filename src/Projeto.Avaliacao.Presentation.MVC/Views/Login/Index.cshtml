@model Projeto.Avaliacao.Application.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>


<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Verificar", "Login", FormMethod.Get))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.LoginUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(l => l.LoginUsuario, new { @class = "form-control input", @placeholder = "Login" })
                        @Html.ValidationMessageFor(model => model.LoginUsuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(l => l.Senha, new { @class = "form-control input", @placeholder = "Senha" })
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="input-group-btn">
                        <button class="btn btn-info btn" style="text-align: center;" type="submit">
                            <small><i class="glyphicon glyphicon-search"></i></small>
                        </button>
                    </span>
                </div>
            </div>
        }
    </div>
</div>

